MenuScreen:

<MenuScreen>:
    MainWidget:
        orientation : "vertical"
        BoxLayout:
            size_hint: 1, 0.1
            ProgressBar:
        RelativeLayout:
            Image:
                id: Ennemy_img
                source: root.Ennemy_img
            Image:
                id: Effect_spell
                source: root.Effect_img
        ProgressBar:
            size_hint: 1, 0.1
            canvas:
                BorderImage:
                    border: (12, 12, 12, 12)
                    pos: self.x, self.center_y - 12
                    size: self.width, 24
                    source: 'images/red.png'
        RelativeLayout:
            MenuPlayer:

                orientation : "vertical"
                AttacksButton:
                    id : Attacks
                    on_press: root.on_attack()
                MagicButton:
                    id : Magics
                    on_press: root.manager.current = 'magic'
                ObjectButton:
                    id : Objects
                FleeButton:
                    id : Flee

<MagicScreen>:
    MainWidget:
        orientation : "vertical"
        BoxLayout:
            size_hint: 1, 0.1
            ProgressBar:
        RelativeLayout:
            Image:
                id: Ennemy_img
                source: root.Ennemy_img
            Image:
                id: Effect_spell
                source: root.Effect_img
        ProgressBar:
            size_hint: 1, 0.1
            canvas:
                BorderImage:
                    border: (12, 12, 12, 12)
                    pos: self.x, self.center_y - 12
                    size: self.width, 24
                    source: 'images/red.png'
        RelativeLayout:
            MenuPlayer:

                orientation : "vertical"
                Button:
                    text: "Menu"
                    on_press: root.manager.current = 'menu'
                    on_press: root.spell_effect_reset()
                Button:
                    text: "Fireball"
                    on_press: root.on_spell_fire_pressed()
                Button:
                    text: "Healing"
                    on_press: root.on_spell_heal_pressed()
                Button:
                    text: "tornado"
                    on_press: root.on_spell_wind_pressed()